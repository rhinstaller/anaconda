name: Refresh Fedora and CentOS Stream container images
on:
  schedule:
    - cron: 0 0 * * *
  # be able to start this action manually from a actions tab when needed
  workflow_dispatch:

permissions:
  contents: read

jobs:
  define-matrix:
    uses: ./.github/workflows/define-matrix.yml
    with:
      target_branch: ''  # Empty = all releases

  update-container:
    needs: define-matrix
    strategy:
      fail-fast: false
      matrix: ${{ fromJSON(needs.define-matrix.outputs.releases) }}
    # Don't run scheduled workflows on forks.
    if: github.event_name != 'schedule' || github.repository == 'rhinstaller/anaconda'
    uses: ./.github/workflows/container-rebuild-action.yml
    secrets: inherit
    with:
      container-tag: ${{ matrix.release }}
      branch: ${{ matrix.target_branch }}
