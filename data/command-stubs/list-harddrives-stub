import sys
import parted

def main(argv):
    lst = set()

    for dev in filter(lambda d: d.type != parted.DEVICE_DM and not d.path.startswith("/dev/sr"), parted.getAllDevices()):
        if dev.path.startswith("/dev/"):
            path = dev.path[5:]
        else:
            path = dev.path

        lst.add((path, dev.getSize()))

    lst = list(lst)
    lst.sort()
    for dev, size in lst:
        print("%s %s" % (dev, size))

if __name__ == "__main__":
    main(sys.argv)
