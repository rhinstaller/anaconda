SCSIMODS="sd_mod sr_mod"

SECSTAGE="agpgart msdos vfat raid0 raid1 raid5 ext3 reiserfs $IDEMODS $SCSIMODS $LATEUSBMODS"

COMMONMODULES="vfat $USBMODS"
